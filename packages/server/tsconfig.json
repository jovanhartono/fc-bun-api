{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,

    "paths": {
      "@/server/*": ["./src/*"]
    },

    "strictNullChecks": true,
    "composite": true
  },
  "exclude": ["node_modules", "drizzle", "dist", "bun.lock"]
}
